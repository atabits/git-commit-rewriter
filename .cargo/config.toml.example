# Example configuration for cross-compilation
# Copy this file to .cargo/config.toml and configure for your system

# For cross-compilation to Windows (GNU toolchain)
[target.x86_64-pc-windows-gnu]
linker = "x86_64-w64-mingw32-gcc"

# For cross-compilation to Linux (if specific settings are needed)
[target.x86_64-unknown-linux-gnu]
# linker = "x86_64-linux-gnu-gcc"  # Uncomment if needed

# For cross-compilation to macOS (if specific settings are needed)
[target.aarch64-apple-darwin]
# linker = "clang"  # Usually not required

[target.x86_64-apple-darwin]
# linker = "clang"  # Usually not required

# Build settings for size reduction
[profile.release]
opt-level = "z"
lto = true
codegen-units = 1
strip = true
panic = "abort"


